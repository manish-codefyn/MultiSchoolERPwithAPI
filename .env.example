# Core Django Settings
DEBUG=0
SECRET_KEY=your-production-secret-key-change-this
ALLOWED_HOSTS=.yourdomain.com,localhost,127.0.0.1

# Database Configuration (PostgreSQL)
# Note: In Docker, DB_HOST should usually be 'db'
